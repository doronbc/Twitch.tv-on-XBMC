<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
	<!-- General -->
	<category label="General">
		<!-- Username -->
		<setting id="username" type="text" label="30050" default="" />
		<!-- OAuth Access Token -->
		<setting id="oathtoken" type="text" label="30067" default="" />
		<!-- Video Quality -->
		<setting id="video" type="enum" label="30040" lvalues="30041|30042|30043|30044|30063" default="0" />
		<!-- Title Display -->
		<setting id="titledisplay" type="enum" label="30045" lvalues="30046|30047|30048|30049|30051" default="0" />
		<!-- Truncate titles -->
		<setting id="titletruncate" type="bool" label="30065" default="true" />
	</category>
	<!-- IRC -->
	<category label="IRC Chat">
		<!-- Enable IRC Chat -->
		<setting id="irc_enable" type="bool" label="30052" default="false" enable="System.HasAddon(script.ircchat)" />
		<!-- Username -->
		<setting id="irc_username" type="text" label="30050" default="" enable="eq(-1,true)" />
		<!-- OAuth Token -->
		<setting id="irc_password" type="text" option="hidden" label="30053" default="" enable="eq(-2,true)" />
	</category>
</settings>
